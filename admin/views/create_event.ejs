<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NavEnt Home</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="../public/css/create_event.css">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
  <body>

    <header>
      <div class="d-flex align-items-center justify-content-between">
        <div class="logo">
            <img src="/res/imgs/navi-event-logo(3d).png" alt="Logo">
        </div>

        <div class="pf-dropdown">
          <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="d-flex align-items-center">

                <div class="pf">
                  <div class="profile-icon">
                    <i class="bi bi-person"></i>
                </div>
                <span class="username">Admin</span>
                </div>

            </div>
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Logout</a></li>
          </ul>
        </div>
      </div>
      
    </header>

    <div class="cointaner">
        <div class="py-5 text-center">
            <i class="bi bi-plus-circle-dotted plus-icon"></i>
            <h1>Create New Event</h1>
        </div>
    </div>

    <div class="container mb-5">

      <h5 class="mb-3">Event Details</h5>
    
      <!-- Event Name -->
      <label for="eventName" class="form-label">Event Name</label>
      <input type="text" class="form-control">
    
      <!-- Description -->
      <div class="mt-3 col-12">
        <label for="description" class="form-label">Description</label>
        <div class="input-group">
          <textarea id="description" class="form-control" rows="4"></textarea>
        </div>
      </div>
    
      <hr class="my-4">
    
      <!-- Event Type -->
      <h4 class="mb-3">Event Type</h4>
      <div class="form-check">
        <input type="radio" name="eventType" class="form-check-input" id="oneTime">
        <label for="oneTime">One Time</label>
      </div>
      <div class="form-check">
        <input type="radio" name="eventType" class="form-check-input" id="ampm">
        <label for="ampm">AM/PM</label>
      </div>
      <div class="form-check">
        <input type="radio" name="eventType" class="form-check-input" id="series">
        <label for="series">Series</label>
      </div>
    
            <!-- Dynamic sections based on event type -->
      <div id="oneTimeSection" style="display: none; margin-top: 10px;">
        <!-- Add one-time specific fields here -->
        <label for="startDate">Start Date</label>
        <input type="date" id="startDate" class="form-control">
        <label for="endDate">End Date</label>
        <input type="date" id="endDate" class="form-control">
      </div>

      <div id="ampmSection" style="display: none; margin-top: 10px;">
        <!-- Add AM/PM specific fields here -->
        <!-- Start and end of AM -->
        <label for="startAM">Start AM</label>
        <input type="time" id="startAM" class="form-control">
        <label for="endAM">End AM</label>
        <input type="time" id="endAM" class="form-control">
        <!-- Start and end of PM -->
        <label for="startPM">Start PM</label>
        <input type="time" id="startPM" class="form-control">
        <label for="endPM">End PM</label>
        <input type="time" id="endPM" class="form-control">
      </div>

      <div id="seriesSection" style="display: none; margin-top: 10px;">
        <!-- Add series specific fields here -->
        <label for="seriesNumber">Series Number</label>
        <input type="number" id="seriesNumber" class="form-control">
      </div>
 
      <hr class="my-4">
    
      <div class="col-12">
        <div class="form-check">
          <input type="checkbox" id="link" class="form-check-input">
          <label for="link" class="form-check-label">Append Registration Link</label>
        </div>
      </div>
      
      <div id="registrationLinkSection" style="display: none;">
        <!-- Input field for registration link -->
        <label for="registrationLink">Registration Link</label>
        <input type="text" id="registrationLink" class="form-control">
      </div>
    
      <hr class="my-4">
    
      <h4 class="mb-3">Upload Image</h4>
    
      <!-- Cover Image Upload -->
      <div class="mt-3 mb-3">
        <label for="eventImage" class="form-label">Cover Image</label>
        <input type="file" class="form-control" id="eventImage" accept="image/*">
      </div>
    
      <hr class="my-4">
    
      <!-- Buttons -->
      <div class="row">
        <div class="col-sm-6">
          <button class="btn btn-primary btn-lg btn-block button-save-draft">Save as Draft</button>
        </div>
        <div class="col-sm-6">
          <button class="btn btn-primary btn-lg btn-block button-save-publish">Save and Publish</button>
        </div>
      </div>
      </div>

    <script>
      $(document).ready(function () {
        $('input[name="eventType"]').change(function () {
          // Hide all sections
          $('#oneTimeSection, #ampmSection, #seriesSection').hide();
    
          // Show the relevant section based on the selected event type
          if ($('#oneTime').prop('checked')) {
            $('#oneTimeSection').show();
          } else if ($('#ampm').prop('checked')) {
            $('#ampmSection').show();
          } else if ($('#series').prop('checked')) {
            $('#seriesSection').show();
          }
        });
      });
    </script>

<script>
  $(document).ready(function () {
    // Handle checkbox changes
    $('input[type="checkbox"]').change(function () {
      if ($('#link').prop('checked')) {
        // Show the input field for registration link
        $('#registrationLinkSection').show();
      } else {
        // Hide the section for registration link if the checkbox is unchecked
        $('#registrationLinkSection').hide();
      }
    });
  });
</script>
    
    <footer>
      <div class="footer-bottom">
          <div class="logo">
            <img src="/res/imgs/navi-event-logo(3d).png" alt="Logo" class="footer-logo">
          </div>
          <p>© 2023 NavEnt. A Saint Louis University Company. All Rights Reserved. CS Slot Org ™</p>
      </div>
    </footer>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  </body>
</html>