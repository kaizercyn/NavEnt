<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NavEnt Home</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="/create_event.css">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
  <body>

    <header>
      <div class="d-flex align-items-center justify-content-between">
        <div class="logo">
            <img src="/res/imgs/navi-event-logo(3d).png" alt="Logo">
        </div>

        <div class="pf-dropdown">
          <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="d-flex align-items-center">

                <div class="pf">
                  <div class="profile-icon">
                    <i class="bi bi-person"></i>
                </div>
                <span class="username">Admin</span>
                </div>

            </div>
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Logout</a></li>
          </ul>
        </div>
      </div>
      
    </header>

    <div class="cointaner">
        <div class="py-5 text-center">
            <i class="bi bi-plus-circle-dotted plus-icon"></i>
            <h1>Create New Event</h1>
        </div>
    </div>

    <div class="container mb-5">

      <h4 class="mb-3">Event Details</h4>
    
      <!-- Event Name -->
      <label for="eventName" class="form-label">Event Name</label>
      <input id="eventName" type="text" class="form-control">

      <!-- Tagline -->
      <div class="mt-3 col-12">
        <label for="tagline" class="form-label">Tagline</label>
        <input id="tagline" type="text" class="form-control">
      </div>
    
      <!-- Description -->
      <div class="mt-3 col-12">
        <label for="description" class="form-label">Description</label>
        <div class="input-group">
          <textarea id="description" class="form-control" rows="4"></textarea>
        </div>
      </div>
    
      <hr class="my-4">
    
      <!-- Event Type -->
      <h4 class="mb-3">Event Attendance Type</h4>
      <div class="form-check">
        <input type="radio" name="eventType" class="form-check-input" id="oneTime">
        <label for="oneTime">One Time</label>
      </div>
      <div class="form-check">
        <input type="radio" name="eventType" class="form-check-input" id="ampm">
        <label for="ampm">AM/PM</label>
      </div>
      <div class="form-check">
        <input type="radio" name="eventType" class="form-check-input" id="series">
        <label for="series">Series</label>
      </div>
    
      <!-- Dynamic sections based on event type -->
      <div id="oneTimeSection" style="display: none; margin-top: 10px;">
        <!-- Add one-time specific fields here -->
        <div style="display: flex; flex-direction: column; gap: 10px;">

          <!-- Start Date -->
          <label for="startDate">Start Date</label>
          <input type="date" id="startDate" class="form-control">

          <div style="display: flex; gap: 10px;">
            <!-- Start Time Container -->
            <div style="flex: 1;">
              <label for="startTime">Start Time</label>
              <input type="time" id="startTime" class="form-control">
            </div>

            <!-- End Time Container -->
            <div style="flex: 1;">
              <label for="endTime">End Time</label>
              <input type="time" id="endTime" class="form-control">
            </div>
          </div>
        </div>
      </div>

      <div id="ampmSection" style="display: none; margin-top: 10px;">
        <!-- Add AM/PM specific fields here -->
        <div style="display: flex; flex-direction: column; gap: 10px;">
      
          <!-- AM/PM Date -->
          <label for="ampmDate"> Date</label>
          <input type="date" id="ampmDate" class="form-control">
      
          <!-- AM Time Container -->
          <h6 class="mb-0">AM</h6>
          <div style="display: flex; gap: 10px;">
            <div style="flex: 1;">
              <label for="startAM">Start</label>
              <input type="time" id="startAM" class="form-control">
            </div>
      
            <div style="flex: 1;">
              <label for="endAM">End</label>
              <input type="time" id="endAM" class="form-control">
            </div>
          </div>
      
          <!-- PM Time Container -->
          <h6 class="mb-0">PM</h6>
          <div style="display: flex; gap: 10px;">
            <div style="flex: 1;">
              <label for="startPM">Start</label>
              <input type="time" id="startPM" class="form-control">
            </div>
      
            <div style="flex: 1;">
              <label for="endPM">End</label>
              <input type="time" id="endPM" class="form-control">
            </div>
          </div>
        </div>
      </div>
      
      <div id="seriesSection" style="display: none; margin-top: 10px;">
        <!-- Add series specific fields here -->
        <label for="seriesNumber">Series Number</label>
        <input type="number" id="seriesNumber" class="form-control" style="margin-bottom: 10px;">
      
        <!-- Container for dynamically generated series fields -->
        <div id="seriesFieldsContainer"></div>
      </div>        
 
      <hr class="my-4">

      <h4 class="mb-3">Event Links</h4>
      <div class="col-12">
        <div class="form-check">
          <input type="checkbox" id="reg-link" class="form-check-input">
          <label for="reg-link" class="form-check-label">Append External Registration Link</label>
        </div>
        <div id="registrationLinkSection" style="display: none; margin-top: 7px; margin-bottom: 10px;">
          <!-- Input field for registration link -->
          <label for="registrationLink">Registration Link</label>
          <input type="text" id="registrationLink" class="form-control">
        </div>
        <label for="evaluationLink" class="form-label">Evaluation Link</label>
        <input id="evaluationLink" type="text" class="form-control">
      
      </div>
      
      <hr class="my-4">
    
      <h4 class="mb-3">Upload Image</h4>
    
      <!-- Cover Image Upload -->
      <div class="mt-3 mb-3">
        <label for="eventImage" class="form-label">Cover Image</label>
        <input type="file" class="form-control" id="eventImage" accept="image/*">
      </div>
    
      <hr class="my-4">
    
      <h4 class="mb-3">Publish Event</h4>
      <div class="form-check">
        <input type="radio" name="isPub" class="form-check-input" id="true">
        <label for="pub">Public Event</label>
      </div>
      <div class="form-check">
        <input type="radio" name="isPub" class="form-check-input" id="false">
        <label for="priv">Private Event</label>
      </div>
      <div class="form-check mt-3">
        <input type="checkbox" id="reg-open" class="form-check-input">
        <label for="reg-open" class="form-check-label">Open for Registration</label>
      </div>

      <hr class="my-4">

      <!-- Buttons -->
      <div class="row">
        <div class="col-sm-6">
          <button class="btn btn-primary btn-lg btn-block button-save-draft">Save as Draft</button>
        </div>
        <div class="col-sm-6">
          <button class="btn btn-primary btn-lg btn-block button-save-publish">Save and Publish</button>
        </div>
      </div>
      </div>
    
    <footer>
      <div class="footer-bottom">
          <div class="logo">
            <img src="/res/imgs/navi-event-logo(3d).png" alt="Logo" class="footer-logo">
          </div>
          <p>© 2023 NavEnt. A Saint Louis University Company. All Rights Reserved. CS Slot Org ™</p>
      </div>
    </footer>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="/create_event.js"></script>
  </body>
</html>